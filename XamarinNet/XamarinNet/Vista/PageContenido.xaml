<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinNet.Vista.PageContenido"
             Title="Detalles de Tarea">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Guardar" x:Name="btn_guardar" Clicked="btn_guardar_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10">
                <Label Text="Nombre de la Tarea" 
                       FontSize="Medium" 
                       FontAttributes="Bold" 
                       Margin="0,10,0,0"/>
                <Entry x:Name="nombre"
                       Placeholder="Ingrese el nombre de la tarea"
                       FontSize="Medium"
                       Margin="0,5,0,10"/>

                <Label Text="Descripción" 
                       FontSize="Medium" 
                       FontAttributes="Bold" 
                       Margin="0,10,0,0"/>
                <Editor x:Name="descripcion" 
                        Placeholder="Ingrese la descripción de la tarea"
                        HeightRequest="100"
                        FontSize="Medium"
                        Margin="0,5,0,10"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>